@page "/Login"
@layout TopBarLayout
@inject NavigationManager navigationManager


<div class="container">

    <div class="row">
        <div class="col">
            <h1 class="alert">Login</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <EditForm Model="@loginAttempt" OnValidSubmit="() => { Task.FromResult(SubmitLoginAttempt(loginAttempt)); }">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <ValidationSummary></ValidationSummary>
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <label for="email">Email:</label>
                        </div>
                        <div class="col-8">
                            <InputText id="email" placeholder="email" @bind-Value="loginAttempt.email"></InputText>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label for="password">Password:</label>
                        </div>
                        <div class="col-8">
                            <InputText id="password" type="password" placeholder="Password" @bind-Value="loginAttempt.password"></InputText>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-success" type="submit">Submit</button>
                            <button type="reset" class="btn btn-dark">Reset</button>
                        </div>
                        <div class="col">
                            <button class="btn btn-info float-right" @onclick="navigateRegister">Register</button>
                        </div>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {

    private AccountModel loginAttempt = new AccountModel();

    private async Task SubmitLoginAttempt(AccountModel loginAttempt) {

       

        navigationManager.NavigateTo("/DeviceSelect");

    }

    private void navigateRegister() {
        navigationManager.NavigateTo("/Register");
    }

}