@inherits Blazor_Instrument_Cluster.Client.Code.DeviceComponent

<li id="DeviceItem" class="list-group-item container" style="width: 100%">
    <div class="row">
        <div class="col">
            <b>Name: </b> @displayRemoteDeviceInfo.name
        </div>
        <div class="col">
            <b>Location: </b> @displayRemoteDeviceInfo.location
        </div>
        <div class="col">
            <b>Type: </b> @displayRemoteDeviceInfo.type
        </div>
        <div class="col">
            <button @onclick="navigateToDevicePage" class="btn-dark">Select</button>
        </div>
    </div>
    @if (displayRemoteDeviceInfo.hasCrestron) {
        <div class="row .mt-1">
            <div class="col">
                <p><b>Has Control Unit: </b>Yes</p>
            </div>
        </div>
    }
    else {
        <div class="mt-1 row">
            <div class="col">
                <p>
                    <b>Has Control Unit:</b> no
                </p>
            </div>
        </div>
    }
    <div class="row">
        <div class="col">
            @if (displayRemoteDeviceInfo.pingResult) {
                <p class="text-success">Ping: success</p>
            }
            else {
                <p class="text-danger">Ping: failed</p>
            }
        </div>
    </div>
</li>